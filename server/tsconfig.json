{
  "compilerOptions": {
    "module": "NodeNext",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "target": "ES6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
